#include <iostream>
using namespace std;

int main() {
    int vetInt[5];
    int entradaNum;
    int soma = 0;

    cout << "Digite 5 numeros: ";

    for (int i = 0; i < 5; i++) {
        cin >> entradaNum;
        vetInt[i] = entradaNum;
        soma += entradaNum; 
    }

    cout << "\nOs numeros digitados foi:" << endl;
    for (int i = 0; i < 5; i++) {
        cout << vetInt[i] << endl;
    }

    double media = soma / 5.0; 

    cout << "\nSoma total = " << soma << endl;
    cout << "Media aritmetica = " << media << endl;

    return 0;
}
